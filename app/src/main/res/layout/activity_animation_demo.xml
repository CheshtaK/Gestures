<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cheshta.gestures.activities.activities.AnimationDemoActivity">

    <Button
        android:id="@+id/btnFadeOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onFadeOut"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="Fade Out" />

    <Button
        android:id="@+id/btnSlideMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnFadeOut"
        android:onClick="onSlideMessage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Sliding Message" />

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="This is a sliding message"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btnRepeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSlideMessage"
        android:onClick="onRepeatAnimation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:text="Repeat Animation" />

    <Button
        android:id="@+id/btnActivityTransition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnRepeat"
        android:onClick="onActivityTransition"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Custom Activity Transition" />

</RelativeLayout>
